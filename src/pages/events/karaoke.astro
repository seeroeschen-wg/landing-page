---
import type { SimpleData } from "@/config/landing.interface";
import { getLandingData } from "@/services/data.service";

const mainData = await getLandingData();

const meta: SimpleData = {
  title: "Singo",
  description: "Singo 2025",
};
---

<!doctype html>
<html
  class="scrollbar-thin scrollbar-thumb-black scrollbar-track-transparent scroll-smooth"
  lang={mainData.meta.lang ?? "en"}
>
  <head>
    <meta charset={mainData.meta.charset ?? "UTF-8"} />
    <title>{meta.title}</title>
    <meta name="description" content={meta.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/disco-ball.png" />
  </head>
  <body class="bg-black">
    <div id="content">
      <img
      id="picture"
      src="/disco-ball.gif"
      alt="Disco Ball"
      />
      <h1 class="text-4xl font-semibold md:text-6xl">Singo 2025</h1>
      <div class="song-container">
        <ol></ol>
        <ol></ol>
      </div>
    </div>
  </body>
</html>

<style>
  body {
    overflow: hidden;
    margin: 0;
  }

  #content {
    position: relative;
    z-index: 2;
    color: white;
    height: 100vh;
    margin: 1rem;
    text-align: center;
  }

  #picture {
    margin-left: auto;
    margin-right: auto;
  }

  h1 {
    color: lightblue;
  }

  .list-container {
    display: flex;
    justify-content: space-between;
    gap: 40px;
    padding: 20px;
  }
</style>
